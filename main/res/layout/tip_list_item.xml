<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingTop="5dip"
  android:paddingLeft="7dip"
  android:paddingRight="5dip"
  android:paddingBottom="5dip"
  style="@style/listItemStyle" >
  
  <ImageView
    android:id="@+id/ivAuthor"
	android:layout_height="46dip"
	android:layout_width="46dip"
    android:background="@drawable/photo_background"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:padding="3dip"
    android:src="@drawable/blank_boy"
    android:scaleType="fitXY" />
    
    <!-- 
        android:textAppearance="@style/TextViewStyleTipListItemTip"
    -->
    
    <LinearLayout
      android:layout_width="0dip"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingLeft="8dip" > 
        
      <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Title" />
        
      <TextView
        android:id="@+id/tvBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Body" />

      <TextView
        android:id="@+id/tvDateAndAuthor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Date and Author" />

      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" > 
      
        <ImageView
          android:id="@+id/ivFriendCountAsTodo"
	      android:layout_height="20dip"
       	  android:layout_width="20dip"
          android:src="@drawable/crown_small"
          android:scaleType="fitXY" />
    
        <TextView
          android:id="@+id/tvFriendCountAsTodo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="A"
          android:paddingRight="10dip" />
      
        <ImageView
          android:id="@+id/ivFriendCountCompleted"
	      android:layout_height="20dip"
       	  android:layout_width="20dip"
          android:src="@drawable/crown_small"
          android:scaleType="fitXY" />
    
        <TextView
          android:id="@+id/tvFriendCountCompleted"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="B" />
              
      </LinearLayout>
      
  </LinearLayout>
  
  <!--
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dip" > 
    -->
    <ImageView
      android:id="@+id/ivTipCompleted"
      android:layout_width="20dip"
	  android:layout_height="20dip"
      android:src="@drawable/crown_small"
      android:scaleType="fitXY"
      android:gravity="right" />
      
      <!--
  </LinearLayout>
  -->
  
</LinearLayout>